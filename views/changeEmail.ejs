<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
    <%- include('./partials/styles')  %>
</head>

<body>

    <%- include('./partials/header')  %>
    <!-- ##### Breadcrumb Area Start ##### -->
    <section class="breadcrumb-area bg-img bg-overlay" style="background-image: url(/assets/img/bg-img/41.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcrumb-content">
                        <h2>Settings</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Breadcrumb Area End ##### -->

    <!-- ##### Breadcrumb Area Start ##### -->
    <div class="mag-breadcrumb py-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/dashboard"><i class="fa fa-home"
                                        aria-hidden="true"></i> Home</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Settings</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Breadcrumb Area End ##### -->

    <!-- ##### Video Submit Area Start ##### -->
    <div class="video-submit-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <!-- Video Submit Content -->
                    <div class="video-submit-content mb-50 p-30 bg-white box-shadow">
                        <!-- Section Title -->
                        <div class="section-heading">
                            <h5>Change Email</h5>
                        </div>

                        <div class="video-info mt-30">
                            <form action="/change-email" method="POST">
                                <div class="form-group">
                                    <label for="upload-file">Old Email</label>
                                    <input type="email" required id="oldEmail" class="form-control" 
                                        >
                                </div>
                                <hr>
                                <div class="form-group">
                                    <label for="upload-file">New Email</label>
                                    <input type="email" required class="form-control" 
                                        id="email1" name="email">
                                </div>
                                <div class="form-group">
                                    <label for="upload-file">Confirm Email</label>
                                    <input type="email" required class="form-control" 
                                        id="email2" name="email2">
                                </div>
                                <input type="hidden" id="emailVal" value="<%= email%>">
                                <p class="text-danger" id="msg"></p>
                                <input type="submit"  id="emailBtn" class="btn mag-btn mt-30" value="Update">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- scripts -->
    <%- include('./partials/scripts')  %>



</body>

</html>